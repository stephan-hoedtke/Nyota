<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/button_margin"
    android:foreground="@drawable/card_view_border"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardBackgroundColor="@color/colorBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/card_view_margin"
        >

        <TextView
            android:id="@+id/titleOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_options"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="@dimen/element_margin"
            app:layout_constraintTop_toTopOf="parent"
            />

        <CheckBox
            android:id="@+id/checkBoxDisplayNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_display_names"
            app:layout_constraintTop_toBottomOf="@id/titleOptions"
            />

        <CheckBox
            android:id="@+id/checkBoxDisplaySymbols"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_display_symbols"
            app:layout_constraintTop_toBottomOf="@id/checkBoxDisplayNames"
            />

        <CheckBox
            android:id="@+id/checkBoxDisplayMagnitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_display_magnitude"
            app:layout_constraintTop_toBottomOf="@id/checkBoxDisplaySymbols"
            />

        <CheckBox
            android:id="@+id/checkBoxDisplayConstellations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_display_constellations"
            app:layout_constraintTop_toBottomOf="@id/checkBoxDisplayMagnitude"
            />

        <TextView
            android:id="@+id/labelBrightness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_brightness"
            app:layout_constraintTop_toBottomOf="@id/checkBoxDisplayConstellations"
            android:layout_marginTop="@dimen/text_margin"
            />

        <SeekBar
            android:id="@+id/seekBarBrightness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/properties_margin"
            app:layout_constraintTop_toBottomOf="@id/labelBrightness"
            />

        <TextView
            android:id="@+id/brightness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/default_brightness"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/seekBarBrightness"
            />

        <ImageView
            android:id="@+id/buttonOK"
            android:layout_width="@dimen/button_size"
            android:layout_height="@dimen/button_size"
            android:src="@drawable/ok"
            android:contentDescription="@string/label_empty"
            app:layout_constraintTop_toBottomOf="@id/seekBarBrightness"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="@dimen/element_margin"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

