<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/button_margin">

    <LinearLayout
        android:layout_width="@dimen/dialog_with"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/card_view_margin">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:textAppearance="?attr/textAppearanceDark"
            android:text="@string/default_text" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/open"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin">

            <ImageView
                android:id="@+id/imageOpen"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/star"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:contentDescription="@string/label_empty" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/imageOpen"
                app:layout_constraintBottom_toBottomOf="@id/imageOpen"
                app:layout_constraintStart_toEndOf="@id/imageOpen"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/text_margin"
                android:text="@string/label_open" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/skyView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin">

        <ImageView
            android:id="@+id/imageSkyView"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/sky"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/label_empty" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/imageSkyView"
            app:layout_constraintBottom_toBottomOf="@id/imageSkyView"
            app:layout_constraintStart_toEndOf="@id/imageSkyView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/text_margin"
            android:text="@string/label_sky" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/finder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_margin">

        <ImageView
            android:id="@+id/imageFinderView"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/finder"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:contentDescription="@string/label_empty" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/imageFinderView"
            app:layout_constraintBottom_toBottomOf="@id/imageFinderView"
            app:layout_constraintStart_toEndOf="@id/imageFinderView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/text_margin"
            android:text="@string/label_finder" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_margin" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

