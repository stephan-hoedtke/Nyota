<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/button_margin"
     android:foreground="@drawable/card_view_border"
    card_view:cardBackgroundColor="@color/colorBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/dialog_with"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/card_view_margin">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Alphabet" />

        <ImageView
            android:id="@+id/imageOpen"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/star"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/text_margin"
            android:contentDescription="@string/label_empty" />

        <TextView
            android:id="@+id/open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/imageOpen"
            app:layout_constraintBottom_toBottomOf="@id/imageOpen"
            app:layout_constraintStart_toEndOf="@id/imageOpen"
            android:layout_marginStart="@dimen/text_margin"
            android:text="Open" />

        <ImageView
            android:id="@+id/imageSkyView"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/sky"
            app:layout_constraintTop_toBottomOf="@+id/imageOpen"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/text_margin"
            android:contentDescription="@string/label_empty" />

        <TextView
            android:id="@+id/skyView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/imageSkyView"
            app:layout_constraintBottom_toBottomOf="@id/imageSkyView"
            app:layout_constraintStart_toEndOf="@id/imageSkyView"
            android:layout_marginStart="@dimen/text_margin"
            android:text="Sky" />

        <ImageView
            android:id="@+id/imageFinderView"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/finder"
            app:layout_constraintTop_toBottomOf="@+id/imageSkyView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/text_margin"
            android:contentDescription="@string/label_empty" />

        <TextView
            android:id="@+id/finder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/imageFinderView"
            app:layout_constraintBottom_toBottomOf="@id/imageFinderView"
            app:layout_constraintStart_toEndOf="@id/imageFinderView"
            android:layout_marginStart="@dimen/text_margin"
            android:text="Finder" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

