<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="textAppearanceCopyright" format="reference" />
    <attr name="textAppearanceNormal" format="reference" />
    <attr name="textAppearanceLarge" format="reference" />
    <attr name="textAppearanceTiny" format="reference" />
    <attr name="textAppearanceTinyDark" format="reference" />
    <attr name="textAppearanceDisabled" format="reference" />
    <attr name="textAppearanceDark" format="reference" />
    <attr name="textAppearanceAccent" format="reference" />
    <attr name="textAppearanceTitle" format="reference" />
    <attr name="textAppearanceError" format="reference" />

    <!--Typography-->
    <style name="Nyota.TextAppearance.Copyright" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">Times</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="Nyota.TextAppearance.Normal" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="alpha">0.4</item>
    </style>

    <style name="Nyota.TextAppearance.Large" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="Nyota.TextAppearance.Tiny" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="Nyota.TextAppearance.Disabled" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/colorPrimaryDisabledText</item>
    </style>

    <style name="Nyota.TextAppearance.Dark" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/colorDarkText</item>
    </style>

    <style name="Nyota.TextAppearance.TinyDark" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_tiny</item>
        <item name="android:textColor">@color/colorDarkText</item>
    </style>

    <style name="Nyota.TextAppearance.Accent" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/colorAccentText</item>
    </style>

    <style name="Nyota.TextAppearance.Title" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textColor">@color/colorTitleText</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Nyota.TextAppearance.Error" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/colorErrorText</item>
    </style>

    <style name="Nyota.TextAppearance.Clickable" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/colorAccentText</item>
    </style>

</resources>
